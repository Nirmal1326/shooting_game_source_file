<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/shootinterfacee" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details"
        android:text="Welcome"
        android:textSize="10dp"
        android:fontFamily="@font/google"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout"
        android:gravity="center"
        android:text="@string/logout"
        android:layout_alignRight="@id/play"
        android:background="@drawable/rect_rounded_button"
        android:fontFamily="@font/google"
        android:textColor="@color/teal_200"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="☠ SHOOT ☠"
        android:fontFamily="@font/silvers"
        android:textColor="#60E1EFEE"
        android:textSize="68sp" />

    <TextView
        android:id="@+id/TopScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play2"
        android:layout_alignLeft="@id/play2"
        android:layout_centerInParent="true"
        android:text="TopScoreData:"
        android:fontFamily="@font/google"
        android:textColor="#B4F10808"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/play"
        android:text="TopScoreData:"
        android:textSize="20dp"
        android:fontFamily="@font/google"
        android:textColor="#B4F10808"
        android:layout_centerInParent="true"
        android:layout_alignRight="@id/play"
        android:id="@+id/TopScore1"
        />

    <Button
        android:id="@+id/play3"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rect_rounded_button"
        android:fontFamily="@font/bullet"
        android:text="Instruction"
        android:textColor="#B4F3EFEF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/play2"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rect_rounded_button"
        android:text="Play"
        android:fontFamily="@font/bullet"
        android:textColor="#8FF3EFEF"
        android:textSize="46sp" />

    <Button
        android:id="@+id/HighScores2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play2"
        android:layout_alignLeft="@id/play2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rect_rounded_button"
        android:text="HighScore:"
        android:fontFamily="@font/google"
        android:textColor="#FF9100"
        android:textSize="16sp" />

    <Button
        android:id="@+id/play"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rect_rounded_button"
        android:text="Play"
        android:fontFamily="@font/bullet"
        android:textColor="#B4F3EFEF"
        android:textSize="46sp" />

    <Button
        android:id="@+id/HighScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play2"
        android:layout_alignRight="@id/play"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rect_rounded_button"
        android:text="HighScore:"
        android:fontFamily="@font/google"
        android:textColor="#FF9100"
        android:textSize="16sp" />


    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play3"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rect_rounded_button"
        android:fontFamily="@font/bullet"
        android:text="EXIT"
        android:textColor="#FF1744"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/volumeCtrl2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_volume_up_24" />
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/HighScores"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/volumeCtrl"
        android:src="@drawable/baseline_volume2_up_24" />

    <ImageView
        android:id="@+id/reset1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/play3"
        android:layout_alignRight="@+id/HighScores2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="-55dp"
        android:src="@drawable/score_reset_1" />

    <ImageView
        android:id="@+id/reset2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/play"
        android:layout_alignRight="@+id/HighScores"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="110dp"
        android:src="@drawable/score_reset_2" />

    <Button
        android:id="@+id/feedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report/FB"
        android:background="@drawable/rect_rounded_button"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/google"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        />

</RelativeLayout>